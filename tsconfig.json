{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "allowJs": true,
    "strict": false,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": ["src/**/*"]
}
